<h1><%= @list.name %></h1>
<div class = "list-navbar">
  <%= link_to "Add Movie!", new_list_bookmark_path(@list.id), class: "btn btn-primary"%>
  <%= link_to "Home", lists_path, class: "btn btn-primary" %>
</div>
<%= cl_image_tag("cld-sample-4",
      width: 400, height: 300, crop: :fill) %>
<div class="list-cards">
  <% if @list.bookmarks.count > 0 %>
    <% @list.bookmarks.each do |bookmark| %>
    <div class="card" style="width: 18rem;">
      <img class="card-img-top" src= <%= @base_url %><%= @logo_size %><%= bookmark.movie.poster_url %> alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title"><%= bookmark.movie.title %></h5>
        <p class="card-text"><%= bookmark.comment %></p>
          <%= link_to bookmark_path(bookmark), data: {turbo_method: :delete} do%>
          <i class="fa-solid fa-trash"></i>
          <% end %>
      </div>
    </div>
    <% end %>
  <% else %>
    <h5> You haven't added movies to this list yet!</h5>
  <% end %>
</div>


<div class="list-buttons">
  <%= link_to "Edit List Name", edit_list_path(@list), class: "btn btn-primary" %>

  <%= link_to "Delete List",
    list_path(@list), class: "btn btn-primary",
    data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?"}
  %>
</div>
